<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/video_menu_listItemHeight_landscape"
    android:orientation="horizontal"
    >
	
	<TextView
	    android:id="@+id/menu_name"
	    android:layout_width="160dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="7.5dp"
        android:gravity="center_vertical|left"
	    android:text="@string/quickmenu"
	    android:textColor="@drawable/video_list_text_color" 
	    android:textSize="16sp"
	    android:singleLine="true"
	/>
	
	<RelativeLayout 
	    android:id="@+id/item_right_rl"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_width="160dp"
        android:layout_height="match_parent"
        android:gravity="center"
	    >

		<ImageView
		    android:id="@+id/left_arrow"
		    android:layout_width="10.5dp"
	        android:layout_height="10.5dp"
	        android:layout_alignParentTop="true"
	        android:layout_marginLeft="15dp"
	        android:layout_marginTop="6.25dp"
		    android:src="@drawable/list_common_icon_left"
		    android:visibility="invisible" />
	
		<TextView
		    android:id="@+id/menu_option"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="4dp"
	        android:layout_centerVertical="true"
			android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
	        android:singleLine="true"
			android:textColor="@drawable/video_list_text_color" 
			android:textSize="16sp"				
			/>
		
		<ImageView
		    android:id="@+id/right_arrow"
		    android:layout_width="10.5dp"
	        android:layout_height="10.5dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="15dp"
	        android:layout_alignTop="@+id/left_arrow"
		    android:src="@drawable/list_common_icon_right"
		    android:visibility="invisible" />
	</RelativeLayout>
