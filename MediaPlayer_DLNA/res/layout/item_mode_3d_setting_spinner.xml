<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_mode_3d_setting_spinner_title"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:gravity="center_vertical|left"
        android:paddingLeft="10dp" >
    </TextView>

    <ImageView
        android:id="@+id/item_mode_3d_setting_spinner_img_left"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:focusable="false"
        android:gravity="center"
        android:src="@drawable/selector_arrow_left" />

    <TextView
        android:id="@+id/item_mode_3d_setting_spinner_prev"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/grey" >
    </TextView>

    <TextView
        android:id="@+id/item_mode_3d_setting_spinner_selected"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/item_mode_3d_setting_spinner_next"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/grey" >
    </TextView>

    <ImageView
        android:id="@+id/item_mode_3d_setting_spinner_img_right"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:focusable="false"
        android:gravity="center"
        android:src="@drawable/selector_arrow_right" />

</LinearLayout>