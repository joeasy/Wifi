<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/divider"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ItemSelect"
        android:layout_width="18.666dp"
        android:layout_height="18.666dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10.666dp"
        android:gravity="center_vertical"
        android:src="@drawable/dnla_device_check_off" />

    <TextView
        android:id="@+id/ItemTitle"
        android:layout_width="500dp"
        android:layout_height="45.33dp"
        android:layout_marginLeft="24dp"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:textColor="@drawable/list_text_color"
        android:textSize="16sp" />

</LinearLayout>